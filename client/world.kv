#:kivy 1.7.2
#:import W kivy.core.window.Window

<Tri>:
    nose: self.right, self.y + self.height / 2
    canvas.before:
        PushMatrix
    canvas:
        Color:
            rgb: 1, 1, 1
        Rotate:
            angle: self.angle
            axis: 0, 0, 1
            origin: self.center
        Triangle:
            points: self.pos + self.nose + [self.x, self.top]
    canvas.after:
        PopMatrix

<Triangle>:
    width: 50
    height: 25
    Tri:
        width: root.width
        height: root.height
        pos: root.pos
        angle: root.angle
    Label:
        center: root.center_x, root.center_y + 35
        text: root.name

<Bullet>:
    opacity: 0
    radius: 5
    canvas:
        Color:
            rgb: 1, 1, 1
        Ellipse:
            pos: self.center_x - self.radius, self.center_y - self.radius
            size: self.radius * 2, self.radius * 2

<Background>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
