#:kivy 1.7.2
#:import W kivy.core.window.Window


<StartMenu@BoxLayout>:
    height: W.height / 2
    width: W.width / 2
    center_x: W.width / 2
    center_y: W.height / 2
    orientation: 'vertical'
    spacing: 10
    padding: 20
    Label:
        text: 'Address:'
    TextInput:
        id: address
        multiline: False
        text: ''
    Label:
        text: 'Name:'
    TextInput:
        id: user_name
        multiline: False
        text: 'anonymous'
    Button:
        text: 'Connect'
        on_press: root.connect(address=address.text, name=user_name.text)

MainWidget:
    start_menu: start_menu
    size: W.size
    StartMenu:
        id: start_menu

<LeftControl>:
    center: W.height / 6, W.height / 6
    inner_x: self.center_x
    inner_y: self.center_y
    outer_rad: W.height / 8
    inner_rad: self.outer_rad / 2.5
    canvas:
        Color:
            rgb: 1, 1, 1
        Line:
            circle: self.center_x, self.center_y, self.outer_rad
        Ellipse:
            pos: self.inner_x - self.inner_rad, self.inner_y - self.inner_rad
            size: self.inner_rad * 2, self.inner_rad * 2

<RightControl>:
    center: W.width - W.height / 6, W.height / 6
    radius: W.height / 8
    canvas:
        Color:
            rgb: 1, 1, 1
        Line:
            circle: self.center_x, self.center_y, self.radius

<Scores@BoxLayout>:
    opacity: .7
    height: W.height / 2
    width: W.width / 6
    x: 0
    top: W.height
    orientation: 'vertical'
    spacing: 0
    padding: 0

<Ping@Label>:
    opacity: .7
    height: W.height / 8
    width: W.width / 6
    x: W.width - self.width
    top: W.height
    text: 'ping: {} ms'.format(self.ping)


<UI>:
    scores: scores
    ping: ping
    LeftControl
    RightControl
    Scores:
        id: scores
    Ping:
        id: ping

<GameWidget>:
    ui: ui
    UI:
        id: ui
